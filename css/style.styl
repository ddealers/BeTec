@import "nib"
*
	margin 0
	padding 0
body
html
	size 100%

/* =========================== ESTILO GENERAL */
h1
	position: absolute;
	font-size: 3.8vw;
	color: #fff;
	transform: rotate(-3deg);
	display: block;
	font-family:'HelveticaNeue-CondensedBold';
h2 
	color: #fff;
	font-size: 2.7vw;
	font-family:'Gill Sans'
	font-weight:bold;
	margin-bottom 3vh
p 
	color: #fff;
	font-size: 1.2vw;
	font-family:'GillSans-Light'
	font-weight:regular;
a
	text-decoration none

/* =========================== NAV */
header
	fixed top left
	width 100%
	display inline-flex
	justify-content space-around
	align-items center
	z-index 1
	figure 
		img
			width 11vw
			min-width: 135px;
			position: fixed;
			left: 93px;
			top: 15px
	nav
		font-family 'Gill Sans'
		font-weight 300
		ul
			display inline-flex
			justify-content space-around
			align-items center
			list-style-type none
			li
				margin-right 3vw
				a
					font-size 1.2vw
					color #fff
					&.selected
						font-family 'GillSans-Bold'
	div.social
		display inline-flex
		flex-wrap wrap
		list-style none
		width 15vw
		margin-top 2vw
		a
			width 100%
			display block
		div.rs
			width 5vw
			margin 0 auto
			a
				size 2vw
				text-align center
				display inline-block
				height 20px
	[class^="icon-"], [class*=" icon-"] 
		color: #fff;
nav.arrows
	fixed top 21vh right 11vw z-index 1
	a
		size 4vw
		display block
		float left
		&.prev
			background url(../img/flechas.png) no-repeat 
			background-size cover
		&.next
			background url(../img/flechas.png) no-repeat -4.5vw
			background-size cover
			margin-left: 2px;

/* =========================== BE TEC */
